<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/milestone_item_background"
    android:padding="16dp"
    android:layout_margin="4dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_milestone_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_milestone_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Milestone Name"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_milestone_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Milestone description goes here"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="8dp" />

        <ProgressBar
            android:id="@+id/progress_milestone"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:progressTint="@color/accent_orange" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/tv_xp_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+100 XP"
            android:textSize="12sp"
            android:textColor="@color/accent_orange"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed"
            android:textSize="10sp"
            android:textColor="@color/text_secondary" />

    </LinearLayout>

</LinearLayout>
