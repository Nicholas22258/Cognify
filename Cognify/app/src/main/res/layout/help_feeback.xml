<!-- This is the root layout for the screen, using ConstraintLayout for flexible positioning. -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"

    tools:context=".HelpActivity">
<!--    android:padding="0dp"-->
    <!-- Screen Title: "Help / Feedback" -->
    <TextView
        android:id="@+id/titleHelpFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/manrope_bold"
        android:text="Help / Feedback"
        android:textColor="@color/text_primary"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Submit Button -->
    <!-- User Input Text Area -->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/helpSubmitBtn"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:layout_marginBottom="136dp"
        android:background="@drawable/button_rounded"
        android:fontFamily="@font/manrope_bold"
        android:text="Submit"
        android:textColor="@color/button_text"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/feedbackInput"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/edittext_border"
        android:fontFamily="@font/manrope_regular"
        android:gravity="top|start"
        android:hint="I'm having an issue with..."
        android:inputType="textMultiLine"
        android:padding="16dp"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_hint"
        app:layout_constraintBottom_toTopOf="@id/helpSubmitBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleHelpFeedback" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/feedbackCancelBtn"
        android:layout_width="150dp"
        android:layout_height="56dp"
        android:text="Cancel"
        android:textColor="@color/white"
        android:background="@drawable/db_check_button"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.963"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.789" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@color/nav_bar_background"
        app:itemBackground="@drawable/nav_active_indicator"
        app:itemIconSize="28dp"
        app:itemActiveIndicatorStyle="@null"
        app:itemIconTint="@color/white"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/bottom_nav_menu"
        />
<!--    app:selectedItemId="@+id/nav_help"-->
</androidx.constraintlayout.widget.ConstraintLayout>