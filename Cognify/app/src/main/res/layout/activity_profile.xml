<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:background="@color/background_dark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <!--  Header  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="24sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="24dp"/>
            <!--  User Avatar  -->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_user_avatar"
                android:background="@drawable/circle_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp"/>
            <!--  Username  -->
            <TextView
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username: username"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>
            <!--  User Email  -->
            <TextView
                android:id="@+id/tv_user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="username@example.com"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>
            <!--  Student ID  -->
            <TextView
                android:id="@+id/tv_student_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:visibility="gone"/>
            <!--  Password Section  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:visibility="gone">
                <TextView
                    android:id="@+id/tv_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="testpass@123!"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center"/>
                <ImageView
                    android:id="@+id/iv_password_visibility"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_visibility"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
            <!--  Change Password Button  -->
            <!--  Account Action Buttons  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:weightSum="2">
                <Button
                    android:id="@+id/btn_change_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="Change Password"
                    android:textColor="@color/accent_orange"
                    android:textSize="14sp"/>
                <Button
                    android:id="@+id/btn_delete_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="Delete Account"
                    android:textColor="@color/accent_orange"
                    android:textSize="14sp"/>
            </LinearLayout>
            <!--  Current Milestone Level  -->
            <ProgressBar
                android:id="@+id/progress_milestone"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progress="0"
                android:progressTint="@color/accent_orange"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/tv_milestone_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Level 0 - Beginner Learner"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:layout_marginBottom="24dp"/>
            <!--  Action Buttons  -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_my_badges"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="My Badges"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:background="@drawable/button_primary"
                android:layout_marginBottom="16dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_milestones"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/button_primary"
                android:text="View Milestones"
                android:textColor="@color/text_primary"
                android:textSize="16sp"/>
            <!--  Motivational Quote  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/motivational_quote"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:fontStyle="italic"
                android:lineSpacingExtra="4dp"
                android:background="@drawable/quote_background"
                android:padding="16dp"
                android:layout_marginBottom="24dp"/>
            <!--  Notes Section  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAddViewNotes"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="View And Upload Notes"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:background="@drawable/button_secondary"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnBackToHomeage"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Back To Homepage"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:background="@drawable/button_secondary"
                    android:layout_marginStart="8dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnLogOut"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Log Out"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:background="@drawable/db_check_button"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@color/nav_bar_background"
        app:itemIconSize="28dp"
        app:itemActiveIndicatorStyle="@null"
        app:itemIconTint="@color/white"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_nav_menu"/>
</RelativeLayout>